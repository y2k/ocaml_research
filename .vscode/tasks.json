{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cold run",
            "type": "shell",
            "command": "rm -f hot-reload.log && OCAMLRUNPARAM=b ./src/_build/default/main.exe",
            "dependsOn": "build",
            "problemMatcher": []
        },
        {
            "label": "hot-reload",
            "type": "shell",
            "command": "OCAMLRUNPARAM=b ./src/_build/default/main.exe -hr hot-reload.log",
            "dependsOn": "build",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "presentation": {
                "reveal": "silent"
            },
            "command": "cd src && dune build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}